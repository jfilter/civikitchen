{
  "name": "civikitchen",
  "version": "1.0.0",
  "description": "E2E tests for CiviKitchen - CiviCRM Buildkit Docker Setup",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:all-php": "./scripts/test-php-versions.sh",
    "test:all-civicrm": "./scripts/test-civicrm-versions.sh",
    "test:all-combinations": "./scripts/test-all-combinations.sh",
    "test:php81": "PHP_VERSION=8.1 ./scripts/test-with-php.sh 8.1",
    "test:php82": "PHP_VERSION=8.2 ./scripts/test-with-php.sh 8.2",
    "test:php83": "PHP_VERSION=8.3 ./scripts/test-with-php.sh 8.3",
    "test:php84": "PHP_VERSION=8.4 ./scripts/test-with-php.sh 8.4",
    "test:civicrm-6.5": "CIVICRM_VERSION=6.5.1 SKIP_WEBSERVER=1 npm test",
    "test:civicrm-6.6": "CIVICRM_VERSION=6.6.3 SKIP_WEBSERVER=1 npm test",
    "test:civicrm-6.7": "CIVICRM_VERSION=6.7.1 SKIP_WEBSERVER=1 npm test",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "keywords": [
    "civicrm",
    "docker",
    "e2e",
    "playwright",
    "buildkit",
    "drupal",
    "wordpress"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jfilter/civikitchen.git"
  },
  "bugs": {
    "url": "https://github.com/jfilter/civikitchen/issues"
  },
  "homepage": "https://github.com/jfilter/civikitchen#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0"
  }
}
